.popup_mask {
  position: fixed;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.4);
  transition-property: opacity;
  transition-duration: 0.3s;
  opacity: 0;
  z-index: 98;
}
.popup_mask {
  opacity: 1;
}
.popup_content {
  overflow: hidden;
  box-sizing: border-box;
  align-items: center;
  position: fixed;
  bottom: 25%;
  border-radius: 8px;
  left: 50%;
  margin-left: -40%;
  min-height: 400rpx;
  background: #ffffff;
  width: 80%;
  z-index: 99;
}
.popup_content .title {
  text-align: center;
  font-size: 32rpx;
  padding: 10rpx 0 0 0;
}
.popup_content .explain_text {
  font-size: 24rpx;
  padding: 10rpx 30rpx 0rpx 30rpx;
  line-height: 38rpx;
  color: #606266;
  align-items: center;
}
.popup_content .explain_text .line {
  padding: 10px;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
}
.popup_content .explain_text .line .path {
  color: #ff6911;
  display: flex;
  text-align: center;
}
.popup_content .butto {
  text-align: center;
  border-style: solid;
  color: #ffffff;
  border-color: #333333;
  border-radius: 15px;
  background-color: #333333;
  font-size: 30rpx;
  line-height: 30px;
}
.popup_content .butto1 {
  text-align: center;
  border-style: solid;
  color: #939393;
  border-color: #ffffff;
  border-radius: 15px;
  font-size: 26rpx;
  line-height: 42px;
}

